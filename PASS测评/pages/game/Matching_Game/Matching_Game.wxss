.main {
  margin-left: 300rpx;
  margin-top: 40rpx;
  width: 150rpx;
  height: 150rpx;
  -webkit-perspective: 1500;
  -moz-perspective: 1500;
  border-radius: 40rpx;
}
.box {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 40rpx;
  cursor: pointer;
}
.box image {
	border-radius: 40rpx;
	width: 100%;
	height: 100%;
}

