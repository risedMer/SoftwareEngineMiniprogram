.box {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 40rpx;
  cursor: pointer;
}
.box image{
	border-radius: 40rpx;
	width: 100%;
	height: 100%;
}
